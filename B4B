
#include <iostream>
using namespace std;

struct Node {
    string name;
    long long prn;
    Node* next;
};

class Club {
    Node* head;
    Node* tail;

public:
    Club() {
        head = tail = nullptr;
    }

    // Add president
    void addPresident() {
        Node* temp = new Node;
        cout << "Enter President PRN and Name: ";
        cin >> temp->prn >> temp->name;
        temp->next = nullptr;
        head = tail = temp;
        cout << "President added successfully.\n";
    }

    // Add secretary
    void addSecretary() {
        if (!head) {
            cout << "Add President first!\n";
            return;
        }
        Node* temp = new Node;
        cout << "Enter Secretary PRN and Name: ";
        cin >> temp->prn >> temp->name;
        temp->next = nullptr;
        tail->next = temp;
        tail = temp;
        cout << "Secretary added successfully.\n";
    }

    // Add member
    void addMember() {
        if (!head || !tail) {
            cout << "Add President and Secretary first!\n";
            return;
        }
        Node* temp = new Node;
        cout << "Enter Member PRN and Name: ";
        cin >> temp->prn >> temp->name;
        temp->next = tail;

        Node* ptr = head;
        while (ptr->next != tail)
            ptr = ptr->next;
        ptr->next = temp;
        cout << "Member added successfully.\n";
    }

    // Display all
    void display() {
        if (!head) {
            cout << "No members in the club.\n";
            return;
        }
        cout << "\n--- Pinnacle Club Members ---\n";
        Node* ptr = head;
        int i = 1;
        while (ptr) {
            if (ptr == head)
                cout << i++ << ". (President) ";
            else if (ptr == tail)
                cout << i++ << ". (Secretary) ";
            else
                cout << i++ << ". (Member) ";
            cout << ptr->name << " [PRN: " << ptr->prn << "]\n";
            ptr = ptr->next;
        }
    }

    // Count total
    void countMembers() {
        int count = 0;
        Node* ptr = head;
        while (ptr) {
            count++;
            ptr = ptr->next;
        }
        cout << "Total Members (including President & Secretary): " << count << endl;
    }

    // Delete President
    void deletePresident() {
        if (!head) {
            cout << "List empty!\n";
            return;
        }
        Node* temp = head;
        head = head->next;
        delete temp;
        cout << "President deleted.\n";
    }

    // Delete Secretary
    void deleteSecretary() {
        if (!head || head == tail) {
            cout << "List empty or only president exists!\n";
            return;
        }
        Node* ptr = head;
        while (ptr->next != tail)
            ptr = ptr->next;
        delete tail;
        tail = ptr;
        tail->next = nullptr;
        cout << "Secretary deleted.\n";
    }

    // Delete Member (by PRN)
    void deleteMember() {
        if (!head) {
            cout << "No members to delete!\n";
            return;
        }
        long long prn;
        cout << "Enter PRN to delete: ";
        cin >> prn;

        Node* ptr = head;
        Node* prev = nullptr;

        while (ptr && ptr->prn != prn) {
            prev = ptr;
            ptr = ptr->next;
        }

        if (!ptr) {
            cout << "Member not found.\n";
            return;
        }
        if (ptr == head) {
            deletePresident();
            return;
        }
        if (ptr == tail) {
            deleteSecretary();
            return;
        }

        prev->next = ptr->next;
        delete ptr;
        cout << "Member deleted successfully.\n";
    }
};

int main() {
    Club c;
    int choice;

    do {
        cout << "\n===== Pinnacle Club Menu =====\n";
        cout << "1. Add President\n2. Add Secretary\n3. Add Member\n";
        cout << "4. Display Members\n5. Count Members\n";
        cout << "6. Delete President\n7. Delete Secretary\n8. Delete Member\n0. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1: c.addPresident(); break;
            case 2: c.addSecretary(); break;
            case 3: c.addMember(); break;
            case 4: c.display(); break;
            case 5: c.countMembers(); break;
            case 6: c.deletePresident(); break;
            case 7: c.deleteSecretary(); break;
            case 8: c.deleteMember(); break;
            case 0: cout << "Exiting...\n"; break;
            default: cout << "Invalid choice!\n";
        }
    } while (choice != 0);

    return 0;
}






